@inject IStringLocalizer<Resource> localizer

<MudPaper Width="250px" Class="py-3" Elevation="0">
	<MudNavMenu>
		<center>
			<MudText Typo="Typo.subtitle1" Class="px-4 fw-bolder">@DateTime.Now.ToLongDateString()</MudText>
		</center>
		<ClockComponent></ClockComponent>
			<MudDivider Class="my-2" />
			<MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@localizer["Home"]</MudNavLink>
			<MudNavLink Href="aboutme" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Person">@localizer["AboutMe"]</MudNavLink>
			<MudText Typo="Typo.body2" Class="px-4 mt-4">@localizer["ComponentShowcase"]</MudText>
			<MudDivider Class="my-2" />
			<MudNavLink Href="AboutDemo" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Memory">1. @localizer["AboutTheDemo"]</MudNavLink>
		<AuthorizeView>
			<Authorized>
					<MudNavLink Href="Account/Authentication" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AppRegistration" Disabled>2. @localizer["Registration"] </MudNavLink>
					<MudNavLink Href="Account/Authentication" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Login" Disabled>3. @localizer["Login"] </MudNavLink>
					<MudNavLink Href="Account/Manage" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">4. @context.User.Identity?.Name's @localizer["Settings"]</MudNavLink>
					<MudNavLink Href="FormDemo/Simple" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.GridView">5. @localizer["SimpleFormDemo"]</MudNavLink>
					<MudNavLink Href="FormDemo/Mass" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.GridOn">6. @localizer["MassFormDemo"]</MudNavLink>
					<MudNavLink Href="FormHistory" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.TableRows">7. @localizer["HistoryDemo"]</MudNavLink>
					<MudNavLink Href="FixedDateBGTaskDemo" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AddTask">8. @localizer["BackgroundTaskDemo"]</MudNavLink>
					<MudNavLink Href="ModifyTask" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.EditNote">9. @localizer["ModifyTaskDemo"]</MudNavLink>
					<MudNavLink Href="ManageMember" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ManageAccounts">10. @localizer["ManagementDemo"]</MudNavLink>
				</Authorized>
				<NotAuthorized>
					<MudNavLink Href="Account/Register" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AppRegistration">2. @localizer["Registration"]</MudNavLink>
					<MudNavLink Href="Account/Login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Login">3. @localizer["Login"]</MudNavLink>
				</NotAuthorized>
			</AuthorizeView>
		</MudNavMenu>
	</MudPaper>
